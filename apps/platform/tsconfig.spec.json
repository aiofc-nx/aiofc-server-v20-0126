{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.spec.ts",
    "../../packages/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
