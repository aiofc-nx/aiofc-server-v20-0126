{
  "compilerOptions": {
    "target": "ES2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "declaration": true,
    "paths": {
      "@aiofc/pino-logger": ["packages/pino-logger/src/index.ts"],
      "@aiofc/zod-env": ["packages/zod-env/src/index.ts"]
    }
  }
}
